# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# Option 1: MongoDB Atlas (Recommended)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trip-tools?retryWrites=true&w=majority

# Option 2: Local MongoDB
MONGODB_URI=mongodb://localhost:27017/trip-tools

# Option 3: Custom MongoDB Connection
# MONGODB_URI=mongodb://username:password@host:port/database

# JWT Secret Keys
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production
JWT_EMAIL_SECRET=your-super-secret-jwt-email-verification-key-change-this-in-production

# Email Configuration (Gmail example)
EMAIL_FROM=noreply@triptools.com
EMAIL_FROM_NAME=Trip Tools
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# OTP Settings
OTP_EXPIRY_MINUTES=10

# Magic Link Settings
MAGIC_LINK_EXPIRY_MINUTES=15

# Password Reset Settings
PASSWORD_RESET_EXPIRY_MINUTES=30
