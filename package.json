{
  "name": "trip-tools",
  "displayName": "Trip Tools",
  "description": "Every Tool You Need for Every Trip. Professional PWA for currency conversion, timezone management, calculation tools, and travel planning. Supports 150+ currencies, 10+ languages, and works completely offline.",
  "version": "1.13.0",
  "private": false,
  "type": "module",
  "keywords": [
    "trip-tools",
    "travel-tools",
    "currency-converter",
    "exchange-rates",
    "timezone-converter",
    "world-clock",
    "travel-planner",
    "itinerary-manager",
    "pwa",
    "progressive-web-app",
    "offline-first",
    "multi-language",
    "internationalization",
    "calculator",
    "tip-calculator",
    "number-system",
    "react",
    "typescript",
    "vite",
    "tailwind",
    "i18n",
    "service-worker",
    "conversion-tools",
    "currency-exchange",
    "time-conversion",
    "UTC",
    "DST",
    "cryptocurrency",
    "financial-tools",
    "business-tools",
    "travel-utilities"
  ],
  "author": {
    "name": "Trip Tools Team",
    "url": "https://trip-tools.com"
  },
  "license": "MIT",
  "homepage": "https://trip-tools.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/yashUcr773/currency-converter.git"
  },
  "bugs": {
    "url": "https://github.com/yashUcr773/currency-converter/issues"
  },
  "scripts": {
    "dev": "node scripts/inject-version.js && vite",
    "build": "node scripts/inject-version.js && tsc -b && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "echo \"Tests not yet implemented\" && exit 0",
    "audit": "npm audit --audit-level moderate",
    "security": "npm audit && npm outdated",
    "clean": "if exist dist rmdir /s /q dist && if exist node_modules\\.vite rmdir /s /q node_modules\\.vite",
    "precommit": "npm run lint && npm run type-check",
    "prebuild": "npm run clean && npm run audit",
    "health-check": "curl -f http://localhost:3000/health.html || exit 1"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.868.0",
    "@aws-sdk/lib-dynamodb": "^3.868.0",
    "@clerk/clerk-react": "^5.42.1",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react-router-dom": "^5.3.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.1",
    "react-router-dom": "^7.7.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "terser": "^5.43.1",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-bundle-analyzer": "^1.2.1"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.25.8"
  }
}
