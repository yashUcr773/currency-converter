# AWS DynamoDB Configuration
# Add these environment variables to your .env file

# AWS Region (default: us-east-1)
VITE_AWS_REGION=us-west-2

# AWS Access Credentials
# Note: For production, use IAM roles instead of access keys
VITE_AWS_ACCESS_KEY_ID=your_access_key_here
VITE_AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Table Name
VITE_DYNAMODB_TABLE_NAME=ratevault-user-data

# Clerk Authentication (required for cloud sync)
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Optional: DynamoDB Local for development
# VITE_DYNAMODB_ENDPOINT=http://localhost:8000

# Example .env file:
# VITE_AWS_REGION=us-east-1
# VITE_AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# VITE_AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
# VITE_DYNAMODB_TABLE_NAME=ratevault-user-data
# VITE_CLERK_PUBLISHABLE_KEY=pk_test_XXXXXXXXXX
